<section>
<div class="form">

<div class="tab-content">
        <div id="signup"> 
<h1>Add a product</h1>

<form class="form" method="post" action="/dashboard/create" enctype="multipart/form-data">

<div class="top-row">
            
        <div class="field-wrap">
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" placeholder="Your product's name">
        </div>

        <div class="field-wrap">
    <h3 style="color: #fa9657;" for="category">Category: </h3>
    <select name="category" id="category">
        <option value="Home & Living">Home & Living</option>
        <option value="Clothing & Shoes">Clothing & Shoes</option>
        <option value="Accessories">Accessories</option>
        <option value="Personal Care">Personal Care</option>
        <option value="Food & Beverage">Food & Beverage</option>
    </select>
        </div>

        <div class="field-wrap">
    <label for="description" class="label">Description: </label>
    <textarea type="text" class="input" id="description" name="description" placeholder="Please describe your product here."></textarea>
        </div>

        <div class="field-wrap">
    <label for="photo" class="label">
      Upload a product photo
        <i class="icon fas fa-cloud-upload-alt fa-1x"></i>
    </label>
    <input class="is-hidden" type="file" id="photo" name="photo">
        </div>

        <div class="field-wrap">
    <label for="price" class="label">Price in USD (including shipping): </label>
    <input type="number" id="price" name="price" min="1" max="1000" placeholder="25">
        </div>

        <div class="field-wrap">
    <label for="itemsRemaining" class="label">Current stock: </label>
    <input type="number" id="itemsRemaining" name="itemsRemaining" min="0" max="1000" placeholder="10">
        </div>


    <button class="button button-block">Add Product</button>

    </div>
</form>

</div>
</div>
</div>
</section>