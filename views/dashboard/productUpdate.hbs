<section>
<div class="form">

<div class="tab-content">
        <div id="signup">
            <h1>Update Product</h1>

<form class="form" method="post" action="/dashboard/update/{{this._id}}" enctype="multipart/form-data">

<div class="top-row">
            
        <div class="field-wrap">
    <label for="name">Product Name</label>
    <input type="text" id="name" name="name" value="{{this.name}}" required>
        </div>

        <div class="field-wrap">
    <h3 style="color: #fa9657;" for="category">Category</h3>
    <select name="category" id="category">
        <option value="Home & Living" {{isSelected "Home & Living" this.category}}>Home & Living</option>
        <option value="Clothing & Shoes" {{isSelected "Clothing & Shoes" this.category}}>Clothing & Shoes</option>
        <option value="Accessories" {{isSelected "Accessories" this.category}}>Accessories</option>
        <option value="Personal Care" {{isSelected "Personal Care" this.category}}>Personal Care</option>
        <option value="Food & Beverage" {{isSelected "Food & Beverage" this.category}}>Food & Beverage</option>
    </select>
        </div>

        <div class="field-wrap">
    <label for="description" class="label">Description</label>
    <textarea type="text" class="input" id="description" name="description" value="{{this.description}}" required></textarea>
        </div>

        <div class="field-wrap">
     <img src="{{this.photo}}" style="height: 100px">
    <label for="photo" class="label">
      Replace product photo
        <i class="icon fas fa-cloud-upload-alt fa-1x"></i>
    </label>
    <input class="is-hidden" type="file" id="photo" name="photo" required>
        </div>

        <div class="field-wrap">
    <label for="price" class="label">Price in USD (including shipping)</label>
    <input type="number" id="price" name="price" min="1" max="1000" value="{{this.price}}" required>
        </div>

        <div class="field-wrap">
    <label for="itemsRemaining" class="label">Current stock</label>
    <input type="number" id="itemsRemaining" name="itemsRemaining" min="0" max="1000" value="{{this.itemsRemaining}}" required>
        </div>


    <button class="button button-block">Update Product</button>

    </div>
</form>

</div>
</div>
</div>
</section>



