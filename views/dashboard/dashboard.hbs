<h1>Vendor dashboard</h1>

<p>Welcome, {{vendor.userName}}!</p>
<img src="{{vendor.photo}}" style="height: 200px;">
<h2>Manage your products</h2>
<div>
{{#each products}}
  <div style="border: 1px solid black">
    <p>{{this.name}}</p>
    <p>{{this.category}}</p>
    <img style="height: 200px;" src="{{this.photo}}">
    <p>{{this.description}}</p>
    <p>${{this.price}}</p>
    <p>Only {{this.itemsRemaining}} left in stock</p>
    <a href="dashboard/update/{{this.id}}">Update this product</a>
    <a href="dashboard/delete/{{this.id}}">Delete this product</a>
  </div>
{{/each}}
</div>
<h2>Add a new product</h2>
<p>Click <a href="/dashboard/create">here</a> to offer a new product for sale!</p>
