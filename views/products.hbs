<div>
    <h1>{{this.name}}</h1>
        <h3>100% Mexican Made</h3>
        <p>{{this.description}}<p>
        <p>Price: us$ {{this.price}}</p>
        <p>Stock: {{this.itemsRemaining}}</p>
